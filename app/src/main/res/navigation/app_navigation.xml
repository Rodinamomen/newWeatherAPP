<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.newweatherapp.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_detailedHourlyForecastFragment"
            app:destination="@id/detailedHourlyForecastFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailedHourlyForecastFragment"
        android:name="com.example.newweatherapp.DetailedHourlyForecastFragment"
        android:label="fragment_detailed_hourly_forecast"
        tools:layout="@layout/fragment_detailed_hourly_forecast" />
</navigation>